<Window
    x:Class="Poc_ComboPlus.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Poc_ComboPlus"
    xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
    Title="{Binding Title}"
    Width="500"
    Height="700">
    <Window.Resources>

        <local:IdToColorConverter x:Key="IdToColorConverter" />

        <DataTemplate x:Key="MyItemTemplate">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <TextBlock
                    Margin="3,0"
                    Foreground="Red"
                    Text="{Binding Id}" />
                <TextBlock
                    Grid.Column="1"
                    Margin="3,0"
                    Background="{Binding Id, Converter={StaticResource IdToColorConverter}}"
                    Foreground="White"
                    Text="{Binding Name}" />
            </Grid>
        </DataTemplate>

        <local:ItemStyleSelector x:Key="ItemStyleSelector">

            <local:ItemStyleSelector.GroupStyle>
                <Style TargetType="ContentControl">
                    <Setter Property="ContentTemplate">
                        <Setter.Value>
                            <DataTemplate>
                                <TextBlock Text="{Binding Name}" />
                            </DataTemplate>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="FontWeight" Value="Bold" />
                    <Setter Property="IsEnabled" Value="False" />
                </Style>
            </local:ItemStyleSelector.GroupStyle>

            <local:ItemStyleSelector.ItemStyle>
                <Style TargetType="ContentControl">
                    <Setter Property="ContentTemplate">
                        <Setter.Value>
                            <DataTemplate>
                                <TextBlock Text="{Binding Name}" />
                            </DataTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </local:ItemStyleSelector.ItemStyle>
        </local:ItemStyleSelector>
    </Window.Resources>

    <StackPanel Grid.IsSharedSizeScope="True">
        <Grid Margin="1,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition
                    Width="Auto"
                    SharedSizeGroup="Label" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0">Combo Native</Label>

            <ComboBox
                Grid.Column="1"
                IsEditable="true"
                IsTextSearchEnabled="True"
                ItemTemplate="{StaticResource MyItemTemplate}"
                ItemsSource="{Binding Items}"
                TextSearch.TextPath="Name" />
        </Grid>

        <Grid Margin="1,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition
                    Width="Auto"
                    SharedSizeGroup="Label" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Label>Combo Native virtualisée</Label>

            <ComboBox
                Grid.Column="1"
                IsEditable="true"
                IsTextSearchEnabled="True"
                ItemTemplate="{StaticResource MyItemTemplate}"
                ItemsSource="{Binding Items}"
                TextSearch.TextPath="Name">
                <ComboBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel />
                    </ItemsPanelTemplate>
                </ComboBox.ItemsPanel>
            </ComboBox>
        </Grid>

        <Grid Margin="1,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition
                    Width="Auto"
                    SharedSizeGroup="Label" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Label>Combo Native virtualisée avec templated SelectItem</Label>

            <ComboBox
                Grid.Column="1"
                IsEditable="False"
                IsSynchronizedWithCurrentItem="True"
                IsTextSearchEnabled="True"
                ItemTemplate="{StaticResource MyItemTemplate}"
                ItemsSource="{Binding Items}"
                Style="{StaticResource TemplatedSelectedItemComboStyle}"
                TextSearch.TextPath="Name">
                <ComboBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel />
                    </ItemsPanelTemplate>
                </ComboBox.ItemsPanel>
            </ComboBox>
        </Grid>

        <Grid Margin="1,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition
                    Width="Auto"
                    SharedSizeGroup="Label" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Label>telerik:RadComboBox</Label>
            <telerik:RadComboBox
                Grid.Column="1"
                telerik:TextSearch.TextPath="Name"
                AllowMultipleSelection="False"
                ClearSelectionButtonContent="Clear selection"
                ClearSelectionButtonVisibility="Visible"
                Command="{Binding RefreshCommand}"
                EmptyText="Sélectionnez..."
                IsEditable="True"
                ItemTemplate="{StaticResource MyItemTemplate}"
                ItemsSource="{Binding Items}"
                VirtualizingPanel.IsVirtualizing="True"
                VirtualizingPanel.IsVirtualizingWhenGrouping="True">
                <telerik:RadComboBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel />
                    </ItemsPanelTemplate>
                </telerik:RadComboBox.ItemsPanel>
            </telerik:RadComboBox>
        </Grid>

        <Grid
            Height="100"
            Margin="1,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition
                    Width="Auto"
                    SharedSizeGroup="Label" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Label>telerik:RadListBox</Label>
            <!--
                Grrrr
                https://www.telerik.com/forums/grouping-slows-down#nsiLmOH-xU-VYWckvx1V6w
            -->
            <telerik:RadListBox
                x:Name="radlistbox"
                Grid.Column="1"
                DisplayMemberPath="Name"
                IsScrollIntoViewEnabled="False"
                ItemsSource="{Binding GroupedItems.View}"
                VirtualizingPanel.IsVirtualizing="True"
                VirtualizingPanel.IsVirtualizingWhenGrouping="True">
                <telerik:RadListBox.GroupStyle>
                    <GroupStyle />
                </telerik:RadListBox.GroupStyle>
            </telerik:RadListBox>
        </Grid>

        <Grid Margin="1,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition
                    Width="Auto"
                    SharedSizeGroup="Label" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Label>telerik:RadComboBox groupé itemstyleselector</Label>
            <telerik:RadComboBox
                Grid.Column="1"
                AllowMultipleSelection="False"
                EmptyText="Sélectionnez..."
                ItemContainerStyleSelector="{StaticResource ItemStyleSelector}"
                ItemsSource="{Binding Items}"
                VirtualizingPanel.IsVirtualizing="True"
                VirtualizingPanel.IsVirtualizingWhenGrouping="True">
                <telerik:RadComboBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel />
                    </ItemsPanelTemplate>
                </telerik:RadComboBox.ItemsPanel>
            </telerik:RadComboBox>
        </Grid>

        <Grid Margin="1,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition
                    Width="Auto"
                    SharedSizeGroup="Label" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Label>telerik:RadComboBox with group</Label>
            <telerik:RadComboBox
                Grid.Column="1"
                AllowMultipleSelection="False"
                EmptyText="Sélectionnez..."
                IsEditable="True"
                ItemTemplate="{StaticResource MyItemTemplate}"
                ItemsSource="{Binding GroupedItems.View}"
                VirtualizingPanel.IsVirtualizing="True"
                VirtualizingPanel.IsVirtualizingWhenGrouping="True">
                <telerik:RadComboBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel />
                    </ItemsPanelTemplate>
                </telerik:RadComboBox.ItemsPanel>
                <telerik:RadComboBox.GroupStyle>
                    <GroupStyle />
                </telerik:RadComboBox.GroupStyle>
            </telerik:RadComboBox>
        </Grid>

        <Grid
            MaxHeight="250"
            Margin="1,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition
                    Width="Auto"
                    SharedSizeGroup="Label" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Label>telerik:DropDown + Grid</Label>
            <telerik:RadDropDownButton
                Grid.Column="1"
                Content="Sélectionnez..."
                DropDownMaxHeight="300"
                DropDownWidth="{Binding RelativeSource={RelativeSource Self}, Path=ActualWidth}">
                <telerik:RadDropDownButton.DropDownContent>
                    <telerik:RadGridView
                        AutoGenerateColumns="False"
                        CanUserSearch="False"
                        GroupRenderMode="Flat"
                        ItemsSource="{Binding Items}"
                        RowIndicatorVisibility="Collapsed"
                        ShowColumnHeaders="False"
                        ShowGroupPanel="False">
                        <telerik:RadGridView.GroupDescriptors>
                            <telerik:GroupDescriptor
                                Member="RegroupementId"
                                SortDirection="Ascending" />
                        </telerik:RadGridView.GroupDescriptors>
                        <telerik:RadGridView.Columns>
                            <telerik:GridViewDataColumn
                                DataMemberBinding="{Binding Name}"
                                Header="Name" />
                        </telerik:RadGridView.Columns>
                    </telerik:RadGridView>
                </telerik:RadDropDownButton.DropDownContent>
            </telerik:RadDropDownButton>
        </Grid>

        <!--
        Vraiment pas bon : affiche des objets recursifs
        <Grid Margin="1,5"
              MaxHeight="250">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"
                                  SharedSizeGroup="Label" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Label>RadTreeListView</Label>

            <telerik:RadTreeListView Grid.Column="1"
                                     ItemsSource="{Binding LinqGroup}">
                <telerik:RadTreeListView.ChildTableDefinitions>
                    <telerik:TreeListViewTableDefinition ItemsSource="{Binding Items}" />
                </telerik:RadTreeListView.ChildTableDefinitions>

                <telerik:RadTreeListView.Columns>
                    <telerik:GridViewDataColumn DataMemberBinding="{Binding Name}"
                                    Header="Name" />
                </telerik:RadTreeListView.Columns>
            </telerik:RadTreeListView>
        </Grid>-->

        <Grid Margin="1,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition
                    Width="Auto"
                    SharedSizeGroup="Label" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Label>telerik:RadComboBox+Grid</Label>
            <telerik:RadComboBox
                Grid.Column="1"
                EmptyText="Sélectionnez..."
                IsEditable="True"
                StaysOpenOnEdit="True"
                Text="{Binding EnhancedComboContext.Text, Mode=TwoWay}">
                <telerik:RadComboBox.Items>
                    <telerik:RadComboBoxItem>
                        <telerik:RadComboBoxItem.Template>
                            <ControlTemplate>
                                <telerik:RadGridView
                                    x:Name="RadGridView1"
                                    AutoGenerateColumns="False"
                                    CanUserFreezeColumns="False"
                                    GroupRenderMode="Flat"
                                    IsFilteringAllowed="False"
                                    IsReadOnly="True"
                                    ItemsSource="{Binding EnhancedComboContext.Items}"
                                    RowIndicatorVisibility="Collapsed"
                                    SelectedItem="{Binding EnhancedComboContext.SelectedItem, Mode=TwoWay}"
                                    ShowColumnHeaders="False"
                                    ShowGroupPanel="False">
                                    <telerik:RadGridView.GroupDescriptors>
                                        <telerik:GroupDescriptor
                                            Member="RegroupementId"
                                            SortDirection="Ascending" />
                                    </telerik:RadGridView.GroupDescriptors>
                                    <telerik:RadGridView.Columns>
                                        <telerik:GridViewDataColumn
                                            DataMemberBinding="{Binding Name}"
                                            Header="Name" />
                                    </telerik:RadGridView.Columns>
                                </telerik:RadGridView>
                            </ControlTemplate>
                        </telerik:RadComboBoxItem.Template>
                    </telerik:RadComboBoxItem>
                </telerik:RadComboBox.Items>
            </telerik:RadComboBox>
        </Grid>
    </StackPanel>
</Window>