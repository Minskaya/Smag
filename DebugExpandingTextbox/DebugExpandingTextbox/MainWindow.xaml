<Window x:Class="DebugExpandingTextbox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ctrl="clr-namespace:Smag.Tars.UI.Wpf.Controls"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:DebugExpandingTextbox"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="MainWindow"
        Width="400"
        Height="450"
        FocusManager.FocusedElement="{Binding ElementName=AA}"
        mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBox x:Name="AA">AAAAAA</TextBox>
        <ctrl:ExpandingTextBox Grid.Row="1"
                               Text="toto" />
        <TextBox Grid.Row="2">BBBB</TextBox>
    </Grid>
</Window>